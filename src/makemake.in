      echotab "${XCC} ${XCPPFLAGS} ${XCFLAGS} -x assembler -c ${f}.s"
    else
      echotab "${XCC} ${XCPPFLAGS} ${XCFLAGS} -c ${f}.s"
    fi
    echol
  fi
done

